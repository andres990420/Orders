@page "/categories"


<div class="card">
    <div class="card-header">
        <i class="bi bi-list-check" /> Categorias
        <a class="btn btn-sm btn-primary float-end mx-1" href="/categories/create"><i class="bi bi-plus-square" />Nueva Categoria</a>
    </div>
    <div class="card-body">
        <GenericList MyList="Categories">
            <Body>
                <Pagination CurrentPage="currentPage" TotalPages="totalPages" SelectPage="SelectedPageAsync" />
                <div class="mb-2" style="display : flex; flex-wrap; align-items: center">
                    <input style="width:400px" type="text" class="form-control" id="titulo" placeholder="Buscar Categoria..." @bind-value="Filter" />
                    <button type="button" class="btn btn-outline-primary mx-1" @onclick="ApplyFilterAsync">Filtrar</button>
                    <button type="button" class="btn btn-outline-danger" @onclick="CleanFilterAsync">Limpiar</button>
                </div>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Categoria</th>
                            <th style="width:168px"></th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var category in Categories!)
                        {
                            <tr>
                                <td>@category.Name</td>
                                <td>
                                    <a href="/categories/edit/@category.Id" class="btn btn-warning"><i class="bi bi-pencil" />Editar</a>
                                    <button @onclick=@(()=> DeleteAsync(category)) class="btn btn-danger"><i class="bi bi-trash" />Borrar</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                    
                </table>
            </Body>
        </GenericList>
    </div>
</div>


